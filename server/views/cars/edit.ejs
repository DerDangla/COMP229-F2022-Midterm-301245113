<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Content for the edit page -->
<div class="container p-5">
  <div class="row justify-content-center">
    <div class="col-md-7">
      <h1 class="text-center"><%= title %></h1>

      <form class="form" method="post">
        <!-- Car Name Field -->
        <div class="form-group row py-3">
          <label for="NameTextField" class="col-sm-3 py-2">Car Name:</label>
          <div class="col-sm-9">
            <input
              type="text"
              class="form-control"
              id="NameTextField"
              placeholder="Car Name"
              name="Carname"
              value="<%= car.Carname %>"
              required
            />
          </div>
        </div>
        <!-- Car Category Field -->
        <div class="form-group row py-3">
          <label for="CatTextField" class="col-sm-3 py-2">Category:</label>
          <div class="col-sm-9">
            <input
              type="text"
              class="form-control"
              id="CatTextField"
              placeholder="car Category"
              name="Category"
              value="<%= car.Category %>"
              required
            />
          </div>
        </div>
        <!-- Car Model Field -->
        <div class="form-group row py-3">
          <label for="ModelTextField" class="col-sm-3 py-2">Car Model:</label>
          <div class="col-sm-9">
            <input
              type="text"
              class="form-control"
              id="ModelTextField"
              placeholder="Car Model"
              name="Carmodel"
              value="<%= car.Carmodel %>"
              required
            />
          </div>
        </div>
        <!-- Car Price Field -->
        <div class="form-group row py-3">
          <label for="PriceTextField" class="col-sm-3 py-2">Price:</label>
          <div class="col-sm-9">
            <input
              type="text"
              class="form-control"
              id="PriceTextField"
              placeholder="Car Price"
              name="Price"
              value="<%= car.Price %>"
              required
            />
          </div>
      </div>

      <div class="form-group row pt-3 justify-content-center">
        <!-- Submit Changes Button -->
        <div class="col-sm-3">
          <button class="btn btn-primary form-control" type="submit">
            <i class="fa fa-check-square-o"></i> Submit
          </button>
        </div>
        <!-- Cancel Changes Button -->
        <div class="col-sm-3">
          <a href="/cars" class="btn btn-danger form-control">
            <i class="fa fa-undo"></i> Cancel
          </a>
        </div>
      </div>
      </form>
    </div>
  </div>
</div>

<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
