<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Content for the delete car page -->
<div class="container p-5">
  <div class="row justify-content-center">
    <div class="col-md-7">
      <h1 class="text-center">Delete a Car</h1>

      <form class="form text" method="post">
        <!-- Car Name Field -->
        <div class="form-group row py-3">
          <label for="nameTextField" class="col-sm-3 py-2">Car Name:</label>
          <div class="col-sm-9">
            <input
              type="text"
              class="form-control"
              id="nameTextField"
              placeholder="Car Name"
              name="Carname"
              required
            />
          </div>
        </div>
        <!-- Delete by Price Page Link -->
        <div class="text-center">
        or
        <div class="form-group row py-3">
          <a href="/cars/deletebyprice">
            Delete by Price
          </a>
        </div>
      </div>
        <div class="form-group row pt-3 justify-content-center">
          <!-- Submit Button -->
          <div class="col-sm-3">
            <button class="btn btn-primary form-control" type="submit">
              <i class="fas fa-edit"></i>Submit
            </button>
          </div>
          <!-- Cancel Button -->
          <div class="col-sm-3">
            <a href="/cars" class="btn btn-danger form-control">
              <i class="fas fa-undo"></i>Cancel
            </a>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
