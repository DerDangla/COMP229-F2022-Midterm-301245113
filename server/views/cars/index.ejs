<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Content for the favourite cars list page -->
<div class="container p-5">
  <div class="row justify-content-center">
    <div class="col-md-9 text-center">
      <h1 class="pb-3">Favourite Cars List</h1>
      <!-- Add A Car Button -->
      <a href="/cars/add" class="btn btn-primary" role="button"
        ><i class="fa fa-plus"></i> Add a Car
      </a>
      <!-- Delete A Car Button -->
      <a href="/cars/delete" class="btn btn-danger" role="button">
        <i class="fas fa-trash"></i> Delete a Car
      </a>
      <!-- Car List Table -->
      <div class="table-responsive pt-3">
        <table class="table table-bordered table-striped table-hover">
          <!-- Car List Header -->
          <thead>
            <tr>
              <th class="text-center">Car Name</th>
              <th class="text-center">Category</th>
              <th class="text-center">Car Model</th>
              <th class="text-center">Price</th>
              <th class="text-center"></th>
               </tr>
          </thead>
          <tbody>
            <!-- Car List Body Content -->
            <% for (let count = 0; count < cars.length; count++) { %>
            <tr>
              <td class="text-center"><%= cars[count].Carname %></td>
              <td class="text-center"><%= cars[count].Category %></td>
              <td class="text-center"><%= cars[count].Carmodel %></td>
              <td class="text-center"><%= cars[count].Price %></td>

              <td class="text-center">
                <!-- Edit Car Details Button -->
                <a href="/cars/edit/<%= cars[count]._id %>" class="btn btn-warning btn-sm">
                  <i class="fas fa-pencil-alt"></i> Edit
                </a>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      
    </main>
      <!-- Pagination -->
      <div class="col-md-offset-1 col-md-10 text-center">
        <ul class="pagination pagination-lg pager" id="myPager"></ul>
      </div>
      
    </div>
  </div>
</div>

<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
